<h1><%= @place.name %></h1>

<p><%= link_to "Back to Places", places_path %></p>

<h2>Entries</h2>

<% if @entries.any? %>
  <ul>
    <% @entries.each do |entry| %>
      <li>
        <strong><%= entry.title %></strong> - <%= entry.occurred_on %>
        <p><%= entry.description %></p>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No entries yet.</p>
<% end %>

<%= link_to "New Post", new_place_entry_path(@place) %>
