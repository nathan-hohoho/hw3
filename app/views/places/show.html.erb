<h1><%= @place.name %></h1>

<p><%= link_to "Back to Places", places_path %></p>

<h2>Entries</h2>

<% if @entries.any? %>
  <p>
    <% @entries.each do |entry| %>
        <h3><%= entry.title %></h3> <br><%= entry.occurred_on %>
        <p><%= entry.description %></p>
    <% end %>
  </p>
<% else %>
  <p>No entries yet.</p>
<% end %>

<%= link_to "New Post", new_place_entry_path(@place) %>
